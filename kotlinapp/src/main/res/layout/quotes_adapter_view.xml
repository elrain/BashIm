<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:id="@+id/llTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:weightSum="20">

            <TextView
                android:id="@+id/tvBashItemPubDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:gravity="bottom"
                android:maxLines="1"
                android:textColor="@color/bash_item_date_color" />

            <TextView
                android:id="@+id/tvBashItemTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10"
                android:maxLines="1"
                android:gravity="end|bottom"
                android:textColor="@color/bash_item_title_color" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivComics"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:visibility="gone"
            android:layout_below="@+id/llTop" />

        <TextView
            android:id="@+id/tvBashItemText"
            style="@style/BashItemViewText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/llTop"
            android:background="@drawable/dotted" />
    </RelativeLayout>

</android.support.v7.widget.CardView>